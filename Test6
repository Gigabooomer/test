# =======================
# Chef
# =======================
FROM lukemathwalker/cargo-chef:latest-rust-1-alpine AS chef
WORKDIR /app

ARG bin
ARG REGISTRY_URL
ARG REGISTRY_TOKEN

ENV RUST_BACKTRACE=1
ENV SQLX_OFFLINE=true

RUN mkdir -p /app/.cargo && \
    cat > /app/.cargo/config.toml <<EOF
[registries.birdy]
index = "sparse+${REGISTRY_URL}/api/v1/crates/"
credential-provider = ["cargo:token"]
token = "${REGISTRY_TOKEN}"
EOF

# =======================
# Planner
# =======================
FROM chef AS planner
WORKDIR /app

COPY Cargo.toml Cargo.lock ./
COPY src ./src

RUN cargo chef prepare --recipe-path recipe.json

# =======================
# Builder
# =======================
FROM chef AS builder
WORKDIR /app

RUN apk add --no-cache \
    build-base \
    pkgconf \
    openssl-dev \
    perl

COPY --from=planner /app/recipe.json recipe.json
RUN cargo chef cook --release --recipe-path recipe.json

COPY Cargo.toml Cargo.lock ./
COPY src ./src
COPY migrations ./migrations

RUN cargo build --release --bin ${bin}

RUN cargo install sqlx-cli \
    --no-default-features \
    --features rustls,postgres

# =======================
# Runtime (distroless)
# =======================
FROM gcr.io/distroless/cc-debian12 AS runtime
WORKDIR /app

COPY --from=builder /app/target/release/${bin} /app/${bin}
COPY --from=builder /usr/local/cargo/bin/sqlx /usr/local/bin/sqlx
COPY --from=builder /app/migrations /app/migrations

# CA certificates are REQUIRED for TLS
COPY --from=builder /etc/ssl/certs/ca-certificates.crt /etc/ssl/certs/

EXPOSE 8080

# Run sqlx migrations, then run the service
ENTRYPOINT [
  "/usr/local/bin/sqlx",
  "migrate",
  "run"
]

CMD ["/app/${bin}"]
