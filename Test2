# syntax=docker/dockerfile:1.7

ARG BIN=promotion_service

############################
# 1. cargo-chef base (Alpine)
############################
FROM lukemathwalker/cargo-chef:latest-rust-alpine AS chef
WORKDIR /app

ARG REGISTRY_URL
ARG REGISTRY_TOKEN

# ---- Private registry (must exist BEFORE planner) ----
RUN mkdir -p /root/.cargo && \
    cat > /root/.cargo/config.toml <<'EOF'
[registries.birdy]
index = "sparse+${REGISTRY_URL}/api/v1/crates/"
credential-provider = ["cargo:token"]

[registry]
token = "${REGISTRY_TOKEN}"
EOF

############################
# 2. Planner
############################
FROM chef AS planner
COPY Cargo.toml Cargo.lock ./
COPY src ./src
RUN cargo chef prepare --recipe-path recipe.json

############################
# 3. Builder
############################
FROM chef AS builder

# Build-only dependencies (NOT in runtime)
RUN apk add --no-cache \
    musl-dev \
    build-base \
    pkgconfig \
    openssl-dev

# Dependency cache
COPY --from=planner /app/recipe.json recipe.json
RUN cargo chef cook \
    --release \
    --target x86_64-unknown-linux-musl \
    --recipe-path recipe.json

# Application source
COPY Cargo.toml Cargo.lock ./
COPY src ./src
COPY migrations ./migrations

# Build binary
RUN cargo build \
    --release \
    --target x86_64-unknown-linux-musl \
    --bin ${BIN} \
 && strip target/x86_64-unknown-linux-musl/release/${BIN}

# Build sqlx-cli (for runtime migrations)
RUN cargo install sqlx-cli \
    --no-default-features \
    --features rustls,postgres \
    --locked

############################
# 4. Runtime (Alpine, small)
############################
FROM alpine:3.20

# Runtime deps only
RUN apk add --no-cache \
    ca-certificates \
    libgcc \
    libstdc++

WORKDIR /app

# App binary
COPY --from=builder \
  /app/target/x86_64-unknown-linux-musl/release/${BIN} \
  /app/${BIN}

# sqlx-cli binary only
COPY --from=builder /root/.cargo/bin/sqlx /usr/local/bin/sqlx

# Migrations
COPY migrations ./migrations

# Entrypoint
COPY entrypoint.sh /entrypoint.sh
RUN chmod +x /entrypoint.sh

# Non-root user
RUN addgroup -S app && adduser -S app -G app
USER app

EXPOSE 8080
ENV RUST_LOG=info

ENTRYPOINT ["/entrypoint.sh"]
