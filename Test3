# syntax=docker/dockerfile:1.7

############################
# Build arguments
############################
ARG BIN=promotion_service
ARG REGISTRY_URL
ARG REGISTRY_TOKEN

############################
# 1. cargo-chef base
############################
FROM lukemathwalker/cargo-chef:latest-rust-1.92-alpine AS chef
WORKDIR /app

# cargo-chef runs as user "rust"
ENV CARGO_HOME=/home/rust/.cargo

# ---- Private registry config (must exist BEFORE planner) ----
RUN mkdir -p ${CARGO_HOME} && \
    cat > ${CARGO_HOME}/config.toml <<EOF
[registries.birdy]
index = "sparse+${REGISTRY_URL}/api/v1/crates/"
credential-provider = ["cargo:token"]

[registry]
token = "${REGISTRY_TOKEN}"
EOF

############################
# 2. Planner
############################
FROM chef AS planner

COPY Cargo.toml Cargo.lock ./
COPY src ./src

RUN cargo chef prepare --recipe-path recipe.json

############################
# 3. Builder
############################
FROM chef AS builder

# Build-only dependencies
RUN apk add --no-cache \
    musl-dev \
    build-base \
    pkgconfig \
    openssl-dev

# Dependency cache
COPY --from=planner /app/recipe.json recipe.json
RUN cargo chef cook \
    --release \
    --target x86_64-unknown-linux-musl \
    --recipe-path recipe.json

# Application source
COPY Cargo.toml Cargo.lock ./
COPY src ./src
COPY migrations ./migrations

# Build binary
RUN cargo build \
    --release \
    --target x86_64-unknown-linux-musl \
    --bin ${BIN} \
 && strip target/x86_64-unknown-linux-musl/release/${BIN}

# sqlx-cli (runtime migrations)
RUN cargo install sqlx-cli \
    --no-default-features \
    --features rustls,postgres \
    --locked

############################
# 4. Runtime (production)
############################
FROM alpine:3.23

# Runtime deps only
RUN apk add --no-cache \
    ca-certificates \
    libgcc \
    libstdc++

WORKDIR /app

# Application binary
COPY --from=builder \
  /app/target/x86_64-unknown-linux-musl/release/${BIN} \
  /app/${BIN}

# sqlx-cli binary only
COPY --from=builder \
  /home/rust/.cargo/bin/sqlx \
  /usr/local/bin/sqlx

# Migrations + entrypoint
COPY migrations ./migrations
COPY entrypoint.sh /entrypoint.sh
RUN chmod +x /entrypoint.sh

# Non-root runtime user
RUN addgroup -S app && adduser -S app -G app
USER app

EXPOSE 8080
ENV RUST_LOG=info

ENTRYPOINT ["/entrypoint.sh"]
