# syntax=docker/dockerfile:1.7

############################
# Global args (defaults)
############################
ARG BIN=business_service
ARG REGISTRY_URL
ARG REGISTRY_TOKEN

############################
# 1. Chef base (build only)
############################
FROM lukemathwalker/cargo-chef:latest-rust-1 AS chef
WORKDIR /app

ARG REGISTRY_URL
ARG REGISTRY_TOKEN

ENV RUST_BACKTRACE=1
ENV SQLX_OFFLINE=true

# Private registry config (build stages only)
RUN mkdir -p /root/.cargo && \
    cat > /root/.cargo/config.toml <<EOF
[registries.birdy]
index = "sparse+${REGISTRY_URL}/api/v1/crates/"
credential-provider = ["cargo:token"]
token = "${REGISTRY_TOKEN}"
EOF

############################
# 2. Planner (dependency graph)
############################
FROM chef AS planner

COPY Cargo.toml Cargo.lock ./
COPY src ./src

RUN cargo chef prepare --recipe-path recipe.json

############################
# 3. Builder (compile)
############################
FROM chef AS builder

ARG BIN

# Build dependencies ONLY here
RUN apk add --no-cache \
    build-base \
    musl-dev \
    pkgconfig \
    openssl-dev

COPY --from=planner /app/recipe.json recipe.json
RUN cargo chef cook --release --recipe-path recipe.json

# Copy full source AFTER deps are cached
COPY . .

RUN cargo build --release --bin ${BIN}

# Install sqlx-cli (needed at runtime for migrations)
RUN cargo install sqlx-cli \
    --no-default-features \
    --features rustls,postgres

############################
# 4. Runtime (small, clean)
############################
FROM alpine:3.22 AS runtime

ARG BIN

# Runtime deps ONLY (no compilers!)
RUN apk add --no-cache \
    ca-certificates \
    libgcc \
    libstdc++ \
    openssl

WORKDIR /app

# Migrations
COPY --from=builder /app/migrations ./migrations

# App binary
COPY --from=builder /app/target/release/${BIN} ./${BIN}

# sqlx binary
COPY --from=builder /usr/local/cargo/bin/sqlx /usr/local/bin/sqlx

# Entrypoint
COPY entrypoint.sh /app/entrypoint.sh
RUN chmod +x /app/entrypoint.sh

EXPOSE 8080
ENTRYPOINT ["/app/entrypoint.sh"]
